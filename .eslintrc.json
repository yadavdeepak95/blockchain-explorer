{
  "plugins": ["spellcheck"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-unexpected-multiline": "error",
    "no-unused-expressions": "error",
    "no-unused-labels": "error",
    "no-unused-vars": "error",
    "comma-dangle": "off",
    "no-console": "off",
    "no-undef": "off",
    "eslintIgnore": ["*.sql"],
    "spellcheck/spell-checker": [
      2,
      {
        "comments": true,
        "strings": true,
        "identifiers": false,
        "lang": "en_US",
        "skipWords": [
          "dict",
          "aff",
          "hunspellchecker",
          "hunspell",
          "utils",
          "nock",
          "redux",
          "api",
          "synchronizer",
          "pid",
          "unhandled",
          "ctrl",
          "http",
          "https",
          "dom",
          "const",
          "fontawesome",
          "svg",
          "Hyperledger",
          "orderer",
          "reactstrap",
          "github",
          "webkit",
          "scrollbar",
          "rgb",
          "appconfig",
          "chaincode",
          "chaincodes",
          "mychannel",
          "auth",
          "eslint",
          "Enzyme",
          "sinon",
          "superagent",
          "javascript",
          "localhost",
          "Analytics",
          "mycc",
          "lscc",
          "datepicker",
          "timeago",
          "nav",
          "dropdown",
          "ffffff",
          "fff",
          "linebreak",
          "checkbox",
          "grpcs",
          "validator",
          "chaincodename",
          "lodash",
          "png",
          "hostname",
          "msp",
          "mspid",
          "jsx",
          "orgs",
          "timeline",
          "createdat",
          "blocknum",
          "channelname",
          "txcount",
          "datahash",
          "blockhash",
          "prehash",
          "txhash",
          "nowrap",
          "pv6",
          "pv4",
          "facebookincubator",
          "precached",
          "Endoser",
          "classnames",
          "liform",
          "datetime",
          "recharts",
          "cartesian",
          "chai",
          "sql",
          "postgres",
          "jsonwebtoken",
          "explorerconfig",
          "middleware",
          "opsserviceroutes",
          "authroutes",
          "dbroutes",
          "platformroutes",
          "opsserviceroutes",
          "#",
          "requestutils",
          "axios",
          "healthz",
          "hlfabric",
          "statedb",
          "msg",
          "requesturl",
          "msps",
          "grpc",
          "orderers",
          "orderrers",
          "newpeer",
          "newchannel",
          "hfc",
          "tls",
          "ssl",
          "hlbeuser",
          "dflt",
          "adminpw",
          "jwt",
          "networklist",
          "req",
          "adminroutes",
          "5bc5c2",
          "sha256",
          "ffc145",
          "util",
          "asn",
          "dir",
          "keystore",
          "enrolment",
          "signcerts",
          "tmp",
          "Asn",
          "der",
          "shouhewu",
          "pem",
          "privatekey",
          "postgre"
        ],
        "skipIfMatch": ["http://[^s]*"],
        "skipWordIfMatch": ["^foobar.*$"],
        "minLength": 3
      }
    ]
  }
}
